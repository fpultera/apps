apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: secrets-test
  namespace: argocd
spec:
  project: default
  source:
    repoURL: https://github.com/fpultera/apps.git
    targetRevision: main
    path: secrets
  destination:
    server: https://kubernetes.default.svc
    namespace: caca
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
